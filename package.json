{
  "name": "midnight-mcp",
  "version": "0.2.1",
  "description": "Model Context Protocol Server for Midnight Blockchain Development",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "midnight-mcp": "./dist/bin.js"
  },
  "scripts": {
    "build": "tsup",
    "typecheck": "tsc --noEmit",
    "start": "node dist/bin.js --stdio",
    "start:http": "node dist/bin.js --http",
    "dev": "NODE_ENV=development tsup --watch",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "format": "prettier --write src/**/*.ts",
    "prepublishOnly": "npm run typecheck && npm run build",
    "ci": "npm run typecheck && npm run build && npm test"
  },
  "keywords": [
    "midnight",
    "blockchain",
    "mcp",
    "model-context-protocol",
    "compact",
    "zero-knowledge",
    "ai",
    "developer-tools"
  ],
  "author": "Idris Olubisi",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "chromadb": "^1.8.1",
    "dotenv": "^16.3.1",
    "express": "^5.2.1",
    "js-yaml": "^4.1.1",
    "octokit": "^3.1.2",
    "openai": "^4.20.1",
    "yargs": "^18.0.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/express": "^5.0.6",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.10.0",
    "@types/tar": "^6.1.13",
    "@types/yargs": "^17.0.35",
    "prettier": "^3.1.0",
    "tar": "^7.5.2",
    "tsup": "^8.5.1",
    "tsx": "^4.6.2",
    "typescript": "^5.3.2",
    "vitest": "^1.0.0"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "files": [
    "dist/**/*.js",
    "dist/**/*.d.ts",
    "README.md",
    "LICENSE"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/Olanetsoft/midnight-mcp.git"
  },
  "homepage": "https://github.com/Olanetsoft/midnight-mcp#readme",
  "bugs": {
    "url": "https://github.com/Olanetsoft/midnight-mcp/issues"
  }
}
