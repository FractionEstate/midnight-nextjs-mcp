{
  "name": "midnight-nextjs-mcp",
  "version": "0.3.1",
  "mcpName": "io.github.FractionEstate/midnight-nextjs-mcp",
  "description": "Unified MCP Server for Midnight Blockchain + Next.js Development - Combines Compact contracts, SDK docs, and turbo monorepo support",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "midnight-nextjs-mcp": "./dist/bin.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsup",
    "typecheck": "tsc --noEmit",
    "start": "node dist/bin.js --stdio",
    "start:http": "node dist/bin.js --http",
    "dev": "NODE_ENV=development tsup --watch",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "format": "prettier --write src/**/*.ts",
    "prepublishOnly": "npm run typecheck && npm run build",
    "ci": "npm run typecheck && npm run build && npm test"
  },
  "keywords": [
    "midnight",
    "blockchain",
    "mcp",
    "model-context-protocol",
    "compact",
    "zero-knowledge",
    "ai",
    "developer-tools",
    "nextjs",
    "turbo-monorepo"
  ],
  "author": "@FractionEstate, Idris Olubisi",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.24.0",
    "chromadb": "^3.2.0",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "js-yaml": "^4.1.1",
    "next-devtools-mcp": "^0.3.9",
    "octokit": "^5.0.5",
    "openai": "^6.15.0",
    "yargs": "^18.0.0",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@types/express": "^5.0.6",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^25.0.3",
    "@types/tar": "^6.1.13",
    "@types/yargs": "^17.0.35",
    "prettier": "^3.1.0",
    "tar": "^7.5.2",
    "tsup": "^8.5.1",
    "tsx": "^4.6.2",
    "typescript": "^5.3.2",
    "vitest": "^4.0.16"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "files": [
    "dist/**/*.js",
    "dist/**/*.js.map",
    "dist/**/*.d.ts",
    "README.md",
    "LICENSE"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/FractionEstate/midnight-nextjs-mcp.git"
  },
  "homepage": "https://github.com/FractionEstate/midnight-nextjs-mcp#readme",
  "bugs": {
    "url": "https://github.com/FractionEstate/midnight-nextjs-mcp/issues"
  }
}
